<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TTSFragment">

    <fragment
        android:id="@+id/TTSFragment"
        android:name="com.example.readingassistant.TTSFragment"
        android:label="@string/tts_fragment_label"
        tools:layout="@layout/fragment_tts">

        <action
            android:id="@+id/action_TTSFragment_to_MediaPlayerFragment"
            app:destination="@id/MediaPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/MediaPlayerFragment"
        android:name="com.example.readingassistant.MediaPlayerFragment"
        android:label="@string/media_player_fragment_label"
        tools:layout="@layout/fragment_media_player">

        <action
            android:id="@+id/action_MediaPlayerFragment_to_TTSFragment"
            app:destination="@id/TTSFragment" />
    </fragment>
</navigation>